# Pipeline-level config

# Optional: set explicit run id; otherwise auto timestamp
RUN_ID=""

# Where logs and run artifacts go (runner will create WORKDIR/logs/<run_id>/)
WORKDIR="/home/unlimitediw/workspace/LLMRunner/.llmrunner"
# Optional override. If empty/unset, runner uses: ${WORKDIR}/logs/${RUN_ID}
LOG_DIR=""

# The ONLY place pipeline steps should read/write data by default.
DATAPOOL_ROOT="/home/unlimitediw/workspace/LLMRunner/datapool"

# Escape hatch. Keep 0 so steps must stay inside datapool.
ALLOW_EXTERNAL_PATHS=0

# 1 = print commands only, do not execute
DRY_RUN=1

# Enable/disable each step
STEP_UDATASETS_ENABLED=0
STEP_TOKENIZE_ENABLED=1
STEP_TRAIN_CPT_ENABLED=1
STEP_TRAIN_SFT_ENABLED=1
STEP_CONVERT_ENABLED=1
STEP_EVAL_ENABLED=0

